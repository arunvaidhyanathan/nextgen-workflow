<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Create users table -->
    <changeSet id="001-create-users-table" author="entitlement-service">
        <createTable tableName="users" schemaName="entitlements">
            <column name="id" type="VARCHAR(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="attributes" type="JSONB"/>
        </createTable>
    </changeSet>

    <!-- Create business_applications table -->
    <changeSet id="002-create-business-applications-table" author="entitlement-service">
        <createTable tableName="business_applications" schemaName="entitlements">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="business_app_name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="is_active" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="metadata" type="JSONB"/>
        </createTable>
    </changeSet>

    <!-- Create business_app_roles table -->
    <changeSet id="003-create-business-app-roles-table" author="entitlement-service">
        <createTable tableName="business_app_roles" schemaName="entitlements">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="business_app_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="role_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="role_display_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="is_active" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="metadata" type="JSONB"/>
        </createTable>
        
        <!-- Add foreign key constraint -->
        <addForeignKeyConstraint 
            constraintName="fk_business_app_roles_business_app"
            baseTableSchemaName="entitlements"
            baseTableName="business_app_roles" 
            baseColumnNames="business_app_id"
            referencedTableSchemaName="entitlements"
            referencedTableName="business_applications"
            referencedColumnNames="id"/>
            
        <!-- Add unique constraint -->
        <addUniqueConstraint 
            constraintName="uk_business_app_role"
            schemaName="entitlements"
            tableName="business_app_roles"
            columnNames="business_app_id,role_name"/>
    </changeSet>

    <!-- Create user_business_app_roles table -->
    <changeSet id="004-create-user-business-app-roles-table" author="entitlement-service">
        <createTable tableName="user_business_app_roles" schemaName="entitlements">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="business_app_role_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Add foreign key constraints -->
        <addForeignKeyConstraint 
            constraintName="fk_user_business_app_roles_user"
            baseTableSchemaName="entitlements"
            baseTableName="user_business_app_roles" 
            baseColumnNames="user_id"
            referencedTableSchemaName="entitlements"
            referencedTableName="users"
            referencedColumnNames="id"/>
            
        <addForeignKeyConstraint 
            constraintName="fk_user_business_app_roles_role"
            baseTableSchemaName="entitlements"
            baseTableName="user_business_app_roles" 
            baseColumnNames="business_app_role_id"
            referencedTableSchemaName="entitlements"
            referencedTableName="business_app_roles"
            referencedColumnNames="id"/>
            
        <!-- Add unique constraint -->
        <addUniqueConstraint 
            constraintName="uk_user_business_app_role"
            schemaName="entitlements"
            tableName="user_business_app_roles"
            columnNames="user_id,business_app_role_id"/>
    </changeSet>

    <!-- Create departments table -->
    <changeSet id="005-create-departments-table" author="entitlement-service">
        <createTable tableName="departments" schemaName="entitlements">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="department_name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="department_code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="is_active" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Create user_departments table (junction table for many-to-many relationship) -->
    <changeSet id="006-create-user-departments-table" author="entitlement-service">
        <createTable tableName="user_departments" schemaName="entitlements">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="department_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Add foreign key constraints -->
        <addForeignKeyConstraint 
            constraintName="fk_user_departments_user"
            baseTableSchemaName="entitlements"
            baseTableName="user_departments" 
            baseColumnNames="user_id"
            referencedTableSchemaName="entitlements"
            referencedTableName="users"
            referencedColumnNames="id"/>
            
        <addForeignKeyConstraint 
            constraintName="fk_user_departments_department"
            baseTableSchemaName="entitlements"
            baseTableName="user_departments" 
            baseColumnNames="department_id"
            referencedTableSchemaName="entitlements"
            referencedTableName="departments"
            referencedColumnNames="id"/>
            
        <!-- Add unique constraint to prevent duplicate user-department assignments -->
        <addUniqueConstraint 
            constraintName="uk_user_department"
            schemaName="entitlements"
            tableName="user_departments"
            columnNames="user_id,department_id"/>
    </changeSet>

</databaseChangeLog>