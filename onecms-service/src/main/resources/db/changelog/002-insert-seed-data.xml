    <changeSet id="2" author="onecms-seed-data">
        <comment>Insert seed case types</comment>
        
        <insert tableName="case_types" schemaName="onecms">
            <column name="type_name" value="Misconduct"/>
            <column name="description" value="Employee misconduct cases"/>
