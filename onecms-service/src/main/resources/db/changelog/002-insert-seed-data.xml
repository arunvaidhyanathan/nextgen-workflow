    <!-- Insert seed data for OneCMS service -->
    
    <changeSet id="1" author="onecms-seed-data">
        <comment>Insert seed departments</comment>
        
        <insert tableName="departments" schemaName="onecms">
            <column name="department_name" value="Human Resources"/>
            <column name="description" value="Human Resources Department - handles employee-related cases"/>
